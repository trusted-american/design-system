<div class="table-responsive" ...attributes>
  <YetiTable
    @data={{@data}}
    @sortable={{@isSortable}}
    @pagination={{eq "local" @pagination}}
    @pageSize={{10}}
    class="table table-hover"
    data-test-table
    as |table|
  >
    {{yield table}}
    {{#if (eq "local" @pagination)}}
      <table.tfoot as |foot|>
        <foot.row as |row|>
          <row.cell colspan={{table.columns.length}}>
            <div class="d-flex justify-content-between align-items-center">
              <span>
                Viewing
                <strong
                >{{table.paginationData.pageStart}}-{{table.paginationData.pageEnd}}</strong>
                of
                <strong>{{@data.length}}</strong>
                results
              </span>
              <nav aria-label="Local pagination">
                <ul class="pagination mb-0">
                  <li class="page-item">
                    <a
                      class="page-link
                        {{if table.paginationData.isFirstPage 'disabled'}}"
                      href="#"
                      data-test-previous
                      {{on "click" table.actions.previousPage}}
                    >{{@previousText}}</a>
                  </li>
                  <li class="page-item">
                    <a
                      class="page-link
                        {{if table.paginationData.isLastPage 'disabled'}}"
                      href="#"
                      data-test-next
                      {{on "click" table.actions.nextPage}}
                    >{{@nextText}}</a>
                  </li>
                </ul>
              </nav>
            </div>
          </row.cell>
        </foot.row>
      </table.tfoot>
    {{/if}}
  </YetiTable>
</div>

{{#if (eq "cursor" @pagination)}}
  <nav aria-label="Cursor pagination">
    <ul class="pagination justify-content-end mt-3 mb-0">
      {{#if @onPrevious}}
        <li class="page-item">
          <a
            class="page-link {{unless @canPrevious 'disabled'}}"
            href="#"
            {{on "click" this.previous}}
          >{{@previousText}}</a>
        </li>
      {{/if}}
      {{#if @onNext}}
        <li class="page-item">
          <a
            class="page-link {{unless @canNext 'disabled'}}"
            href="#"
            {{on "click" this.next}}
          >{{@nextText}}</a>
        </li>
      {{/if}}
    </ul>
  </nav>
{{else if (eq "offset" @pagination)}}
  {{#if (and (or @page (eq 0 @page)) @totalItems @onChangePage)}}
    <Pagination
      @page={{@page}}
      @pageSize={{20}}
      @totalItems={{@totalItems}}
      @nextText={{@nextText}}
      @previousText={{@previousText}}
      @onChange={{@onChangePage}}
      class="mt-3"
    />
  {{/if}}
{{/if}}