{{#if @isHorizontal}}
  <div class="col-auto border-end">
    <dt class="text-secondary">
      {{@label}}
      {{#if @tooltip}}
        <a href="#" class="text-secondary ms-2">
          <i class="fas fa-info-circle" {{tooltip @tooltip}}></i>
        </a>
      {{/if}}
    </dt>
    <dd class="" ...attributes>
      {{#if @alt}}
        <span class="text-disabled">
          No
          {{@label}}
        </span>
      {{else}}
        {{#if @value}}
          <Copy::Button @text={{@value}} {{tooltip (concat "Copy " @label)}}>
            {{yield}}
          </Copy::Button>
        {{else}}
          {{yield}}
        {{/if}}
      {{/if}}
    </dd>
  </div>
{{else}}
  <dt class="col-5 text-secondary">
    {{@label}}
  </dt>
  <dd class="col-7 overflow-hidden" ...attributes>
    {{#if @alt}}
      <span class="text-disabled">
        No
        {{@label}}
      </span>
    {{else}}
      {{#if @value}}
        <Copy::Button @text={{@value}} {{tooltip (concat "Copy " @label)}}>
          {{yield}}
        </Copy::Button>
      {{else}}
        {{yield}}
      {{/if}}
    {{/if}}
  </dd>
{{/if}}