<Bs::Modal
  @title={{@title}}
  @size={{@size}}
  @static={{@static}}
  @keyboard={{@keyboard}}
  @focus={{@focus}}
  @scroll={{@scroll}}
  @fullscreen={{@fullscreen}}
  @hideClose={{@hideClose}}
  @onClose={{@onClose}}
  ...attributes
  as |modal|
>
  <modal.body>
    {{yield}}
  </modal.body>
  {{#if (has-block "footer")}}
    <modal.footer>
      {{yield to="footer"}}
    </modal.footer>
  {{/if}}
</Bs::Modal>