<Bs::Breadcrumb as |bc|>
  {{#each (breadcrumbs) as |breadcrumb|}}
    {{#if (has-next breadcrumb (breadcrumbs))}}
      <bc.item>
        {{#if breadcrumb.data.model}}
          <LinkTo
            @route={{breadcrumb.data.route}}
            @model={{breadcrumb.data.model}}
          >
            {{breadcrumb.title}}
          </LinkTo>
        {{else}}
          <LinkTo @route={{breadcrumb.data.route}}>
            {{breadcrumb.title}}
          </LinkTo>
        {{/if}}
      </bc.item>
    {{else}}
      <bc.item @current={{true}}>
        {{breadcrumb.title}}
      </bc.item>
    {{/if}}
  {{/each}}
</Bs::Breadcrumb>