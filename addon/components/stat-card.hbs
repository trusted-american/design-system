<Card class="bg-body-tertiary border-0 mb-4" ...attributes as |card|>
  <card.body>
    <div class="d-flex gap-2">
      <div class="flex-grow-1">
        <p class="card-title fw-semibold text-uppercase text-secondary">
          {{@label}}
        </p>
        <h1 class="mb-0">
          {{#if @value}}
            {{@value}}
          {{else if (has-block)}}
            {{yield}}
          {{else}}
            &mdash;
          {{/if}}
        </h1>
      </div>
      {{#if @icon}}
        <div>
          <Icon @icon={{@icon}} @color="body" @size="3x" />
        </div>
      {{/if}}
    </div>
    {{#if @route}}
      <LinkTo @route={{@route}} class="stretched-link" aria-label={{@label}} />
    {{/if}}
  </card.body>
</Card>