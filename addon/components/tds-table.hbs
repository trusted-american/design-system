<div class="table-responsive">
  <YetiTable
    @data={{@data}}
    @sortable={{@sortable}}
    @pagination={{eq "local" @pagination}}
    class="table table-hover"
    ...attributes
    as |table|
  >
    {{yield table}}
    <table.tfoot as |foot|>
      <foot.row as |row|>
        <row.cell
          @visible={{if @pagination true false}}
          colspan={{table.columns.length}}
        >
          {{#if (eq "local" @pagination)}}
            <table.pagination />
          {{else}}
            {{#if @onPrevious}}
              <Button
                @text="Previous"
                disabled={{not @canPrevious}}
                {{on "click" @onPrevious}}
              />
            {{/if}}
            {{#if @onNext}}
              <Button
                @text="Next"
                disabled={{not @canNext}}
                {{on "click" @onNext}}
              />
            {{/if}}
          {{/if}}
        </row.cell>
      </foot.row>
    </table.tfoot>
  </YetiTable>
</div>