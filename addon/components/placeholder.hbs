<div class='d-flex justify-content-center text-secondary' ...attributes>
  <div class='text-center' style={{html-safe 'max-width: 22rem;'}}>
    <h1>
      <FaIcon @icon={{@icon}} />
    </h1>
    <h6 class='h5 mb-0'>
      {{@title}}
    </h6>
    {{#if @subtitle}}
      <p class='mt-2 mb-0'>
        {{@subtitle}}
      </p>
    {{/if}}
    {{#if @onClick}}
      <Bs::Button class='mt-3' @onClick={{@onClick}}>
        <FaIcon @icon='plus' class='me-1' />
        Create
      </Bs::Button>
    {{/if}}
  </div>
</div>