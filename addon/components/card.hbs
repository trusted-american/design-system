<Bs::Card class="mb-4" ...attributes as |card|>
  {{#if @title}}
    <card.header
      @title={{@title}}
      class="bg-white pe-2"
      {{! template-lint-disable no-inline-styles }}
      style="min-height: 3.465rem;"
    >
      {{yield to="header"}}
    </card.header>
  {{/if}}
  {{#if (has-block "padded")}}
    <card.body>
      {{yield to="padded"}}
    </card.body>
  {{/if}}
  {{yield}}
</Bs::Card>