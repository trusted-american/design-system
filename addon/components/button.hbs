<Bs::Button
  @isSubmit={{@isSubmit}}
  @size={{@size}}
  @outline={{@outline}}
  @color={{if @color @color "secondary"}}
  disabled={{if @loading true}}
  aria-label={{if @iconOnly @text}}
  ...attributes
>
  {{#if @loading}}
    <span class="spinner-border spinner-border-sm" role="status"></span>
  {{/if}}
  {{#if @icon}}
    <FaIcon @icon={{@icon}} class={{unless @iconOnly "me-1"}} />
  {{/if}}
  {{unless @iconOnly @text}}
</Bs::Button>