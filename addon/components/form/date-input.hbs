<Form::Label
  @text={{unless @isInputOnly @label}}
  @identifier={{@identifier}}
  @required={{@required}}
/>

<input
  type="date"
  id={{@identifier}}
  value={{this.value}}
  min={{this.min}}
  max={{this.max}}
  class="form-control {{if @size (concat 'form-control-' @size)}}"
  required={{@required}}
  aria-label={{if @isInputOnly @label}}
  {{on "change" this.change}}
  ...attributes
/>

<Form::Error @text={{@invalidFeedback}} />
<Form::Help @text={{@help}} />