<Form::Label
  @text={{@label}}
  @identifier={{@identifier}}
  @required={{@required}}
/>

<Textarea
  @value={{@value}}
  id={{@identifier}}
  required={{@required}}
  class="form-control {{if @size (concat 'form-control-' @size)}}"
  ...attributes
/>

{{#if @help}}
  <div class="form-text">
    {{@help}}
  </div>
{{/if}}