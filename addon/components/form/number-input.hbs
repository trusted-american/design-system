<Form::Label
  @text={{unless @inputOnly @label}}
  @identifier={{@identifier}}
  @required={{@required}}
/>

<input
  type="number"
  id={{@identifier}}
  value={{this.value}}
  class="form-control {{if @size (concat 'form-control-' @size)}}"
  required={{@required}}
  aria-label={{if @inputOnly @label}}
  {{on "input" this.change}}
  ...attributes
/>

<Form::Error @text={{@invalidFeedback}} />
<Form::Help @text={{@help}} />