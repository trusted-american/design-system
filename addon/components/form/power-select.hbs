<Form::Label
  @text={{unless @isInputOnly @label}}
  @identifier={{@identifier}}
  @isRequired={{@isRequired}}
/>

{{#if @onCreate}}
  <PowerSelectWithCreate
    @options={{@options}}
    @search={{@search}}
    @selected={{@selected}}
    @disabled={{@disabled}}
    @placeholder="Choose&hellip;"
    @renderInPlace={{true}}
    @searchEnabled={{true}}
    @searchField={{@searchField}}
    @searchPlaceholder="Search&hellip;"
    @matcher={{@matcher}}
    @allowClear={{@allowClear}}
    @verticalPosition={{@verticalPosition}}
    @showCreatePosition="bottom"
    @onChange={{@onChange}}
    @onCreate={{@onCreate}}
    id={{@identifier}}
    ...attributes
    as |option|
  >
    {{! @glint-expect-error }}
    {{yield option}}
  </PowerSelectWithCreate>
{{else}}
  <PowerSelect
    @options={{@options}}
    @search={{@search}}
    @selected={{@selected}}
    @disabled={{@disabled}}
    @placeholder="Choose&hellip;"
    @renderInPlace={{true}}
    @searchEnabled={{true}}
    @searchField={{@searchField}}
    @searchPlaceholder="Search&hellip;"
    @matcher={{@matcher}}
    @allowClear={{@allowClear}}
    @verticalPosition={{@verticalPosition}}
    @triggerId={{@identifier}}
    {{! @glint-expect-error }}
    @onChange={{@onChange}}
    ...attributes
    as |option|
  >
    {{yield option}}
  </PowerSelect>
{{/if}}

{{!-- <Input
  @value={{@selected}}
  @type="text"
  required={{@isRequired}}
  class="d-none"
/> --}}

<Form::Error @text={{@invalidFeedback}} />

{{#if @help}}
  <Form::Help @text={{@help}} />
{{/if}}