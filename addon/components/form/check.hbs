<div
  class="form-check
    {{if @inline 'form-check-inline'}}
    {{if @switch 'form-switch'}}"
>
  <Input
    @checked={{@value}}
    @type="checkbox"
    id={{@identifier}}
    class="form-check-input"
    required={{@required}}
    ...attributes
  />

  <Form::Label
    @text={{@label}}
    @identifier={{@identifier}}
    @required={{@required}}
    @isCheck={{true}}
  />

  {{#if @helpTooltip}}
    <a href="#" tabindex="-1" class="link-secondary" {{tooltip @helpTooltip}}>
      <Icon @icon="circle-info" />
    </a>
  {{/if}}

  <Form::Help @text={{@help}} class="mt-0 mb-2" />
</div>