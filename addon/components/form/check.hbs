<div
  class="form-check
    {{if @isInline 'form-check-inline'}}
    {{if @isSwitch 'form-switch'}}"
>
  <Form::Check::Input
    @value={{@value}}
    @label={{@label}}
    @identifier={{@identifier}}
    @required={{@required}}
    @isInputOnly={{@isInputOnly}}
    ...attributes
  />

  <Form::Label
    @text={{unless @isInputOnly @label}}
    @identifier={{@identifier}}
    @required={{@required}}
    @isCheck={{true}}
  />

  <Form::Error @text={{@invalidFeedback}} />
  <Form::Help @text={{@help}} class="mb-2" />
</div>