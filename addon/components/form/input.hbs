<Form::Label
  @text={{unless @isInputOnly @label}}
  @identifier={{@identifier}}
  @isRequired={{@isRequired}}
/>

<input
  value={{@value}}
  type={{if @type @type "text"}}
  id={{@identifier}}
  class="form-control
    {{if @size (concat 'form-control-' @size)}}
    {{if (eq 'color' @type) 'form-control-color'}}
    {{if @errors 'is-invalid'}}"
  required={{@isRequired}}
  aria-label={{if @isInputOnly @label}}
  {{on "input" this.change}}
  ...attributes
/>

<Form::Error @text={{@invalidFeedback}} />

{{#each @errors as |error|}}
  <Form::Error @text={{error.message}} />
{{/each}}

<Form::Help @text={{@help}} />