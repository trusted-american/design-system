<Button
  @text="Sort"
  @icon={{if @sortAscending "arrow-up-wide-short" "arrow-down-wide-short"}}
  data-test-list-sort
  {{dropdown autoClose="outside"}}
/>
<Dropdown data-test-list-sort-dropdown>
  {{#each @options as |opt|}}
    <Dropdown::Item
      @text={{opt.label}}
      @icon="check"
      class={{if (not-eq opt.value @sortBy) "invisible-icon"}}
      data-test-sort-by
      {{on "click" (fn @onChange opt.value @sortAscending)}}
    />
  {{/each}}
  <Dropdown::Divider />
  <Dropdown::Item
    @text="High to Low"
    @icon="check"
    class={{if (not-eq false @sortAscending) "invisible-icon"}}
    data-test-sort-ascending-false
    {{on "click" (fn @onChange @sortBy false)}}
  />
  <Dropdown::Item
    @text="Low to High"
    @icon="check"
    class={{if (not-eq true @sortAscending) "invisible-icon"}}
    data-test-sort-ascending-true
    {{on "click" (fn @onChange @sortBy true)}}
  />
</Dropdown>