<Card class="mb-4" ...attributes as |card|>
  {{#if @title}}
    <div
      class="card-header bg-body pe-2
        {{if @title 'd-flex justify-content-between align-items-center'}}"
      {{! template-lint-disable no-inline-styles }}
      style="min-height: 3.465rem;"
    >
      {{#if @title}}
        <h6 class="mb-0">{{@title}}</h6>
      {{/if}}
      {{yield to="header"}}
    </div>
  {{/if}}
  {{#if (has-block "padded")}}
    <card.body>
      {{yield to="padded"}}
    </card.body>
  {{/if}}
  {{yield}}
</Card>