{{#if @isLoading}}
  <Spinner::Internal />
{{/if}}
{{if (and (not @isIconOnly) @isIconTrailing) @text}}
{{#if @icon}}
  <Icon
    {{! @glint-expect-error }}
    @icon={{@icon}}
    @prefix={{@iconPrefix}}
    class={{unless @isIconOnly (if @isIconTrailing "ms-1" "me-1")}}
    ...attributes
  />
{{/if}}
{{if (and (not @isIconOnly) (not @isIconTrailing)) @text}}
{{#if @count}}
  <Badge @text="{{@count}}" @isPill={{true}} class="ms-1" />
{{/if}}
{{#if @shortcut}}
  <kbd>{{@shortcut}}</kbd>
{{/if}}