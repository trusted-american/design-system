{{#if @isLoading}}
  <Spinner::Internal />
{{/if}}
{{if (and (not @isIconOnly) @isIconTrailing) @label}}
{{#if @icon}}
  <Icon
    @icon={{@icon}}
    @prefix={{@iconPrefix}}
    class={{unless @isIconOnly (if @isIconTrailing "ms-1" "me-1")}}
    ...attributes
  />
{{/if}}
{{if (and (not @isIconOnly) (not @isIconTrailing)) @label}}
{{#if @count}}
  <Badge @label="{{@count}}" @isPill={{true}} class="ms-1" />
{{/if}}
{{#if @shortcut}}
  <kbd>{{@shortcut}}</kbd>
{{/if}}