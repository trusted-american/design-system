<div class="d-flex justify-content-between align-items-center" ...attributes>
  {{! @glint-expect-error }}
  {{#if @onChange}}
    <span>
      {{! TODO: string }}
      Viewing
      <strong>{{this.pageStart}}-{{this.pageEnd}}</strong>
      of
      {{! @glint-expect-error }}
      <strong>{{@totalItems}}</strong>
      results
    </span>
  {{/if}}
  <nav data-test-pagination>
    <ul class="pagination mb-0">
      <li class="page-item {{unless this.canPrevious 'disabled'}}">
        <a
          class="page-link"
          href="#"
          data-test-previous
          {{on "click" this.previous}}
        >{{@previousText}}</a>
      </li>
      {{#if (lt this.length 6)}}
        {{#each this.pages as |_ index|}}
          {{#if @page}}
            <Pagination::Item
              @page={{@page}}
              @index={{index}}
              @onClick={{fn this.change index}}
            />
          {{/if}}
        {{/each}}
      {{else}}
        {{#each this.pages as |_ index|}}
          {{#if (eq index 0)}}
            <li class="page-item {{if (eq @page index) 'active'}}">
              <a
                class="page-link"
                href="#"
                {{on "click" (fn this.change index)}}
              >{{inc index}}</a>
            </li>
            {{#if (eq @page index)}}
              <li class="page-item">
                <div class="page-link" disabled>
                  ...
                </div>
              </li>
            {{/if}}
          {{else if
            (and
              (and (eq index this.beforeCurrentIndex) (gt index 0))
              (lt index this.twoAway)
            )
          }}
            {{#if (gt index 1)}}
              <li class="page-item">
                <div class="page-link" disabled>
                  ...
                </div>
              </li>
            {{/if}}
            <li class="page-item">
              <a
                class="page-link"
                href="#"
                {{on "click" (fn this.change index)}}
              >{{inc index}}</a>
            </li>
          {{else if (eq index @page)}}
            {{#if (eq index this.length)}}
              <li class="page-item">
                <div class="page-link" disabled>
                  ...
                </div>
              </li>
            {{/if}}
            <li class="page-item active">
              <a
                class="page-link"
                href="#"
                {{on "click" (fn this.change index)}}
              >{{inc index}}</a>
            </li>
          {{else if
            (and (eq index this.afterCurrentIndex) (lt index this.length))
          }}
            <li class="page-item">
              <a
                class="page-link"
                href="#"
                {{on "click" (fn this.change index)}}
              >{{inc index}}</a>
            </li>
            {{#if (lt index this.twoAway)}}
              <li class="page-item">
                <div class="page-link" disabled>
                  ...
                </div>
              </li>
            {{/if}}
          {{else if (eq index this.length)}}
            <li class="page-item {{if (eq @page index) 'active'}}">
              <a
                class="page-link"
                href="#"
                {{on "click" (fn this.change index)}}
              >{{inc index}}</a>
            </li>
          {{/if}}
        {{/each}}
      {{/if}}
      <li class="page-item {{unless this.canNext 'disabled'}}">
        <a
          class="page-link"
          href="#"
          data-test-next
          {{on "click" this.next}}
        >{{@nextText}}</a>
      </li>
    </ul>
  </nav>
</div>