<aside
  class="d-flex flex-column flex-shrink-0 overflow-y-auto bg-body-tertiary border-end p-3
    {{if this.collapsed 'collapsed'}}"
  data-test-aside
>
  <LinkTo
    @route={{@route}}
    class="d-flex align-items-center link-dark text-decoration-none pt-2 pb-4"
  >
    <img src={{@logo}} alt={{@title}} class="tds-aside-logo me-3" />
    <h4 class="tds-aside-title mb-0">{{@title}}</h4>
  </LinkTo>

  <Nav @pills={{true}} class="flex-column flex-grow-1" aria-label="Upper nav">
    {{yield}}
  </Nav>

  <Nav @pills={{true}} class="flex-column" aria-label="Lower nav">
    {{yield to="lower"}}
  </Nav>

  {{#if (has-block "bottom")}}
    <div class="pt-3">
      {{yield to="bottom"}}
    </div>
  {{/if}}

  <div class="pt-3">
    <Button
      @text="Toggle menu"
      @icon="toggle-{{if this.collapsed 'off' 'on'}}"
      @iconOnly={{true}}
      @color="dark"
      class="px-2"
      {{tooltip "Toggle menu" trigger="hover" placement="right"}}
      {{on "click" (fn (mut this.collapsed) (not this.collapsed))}}
    />
  </div>
</aside>