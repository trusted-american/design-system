<aside
  class="d-flex flex-column flex-shrink-0 overflow-y-auto bg-body-tertiary border-end p-3
    {{if this.collapsed 'collapsed'}}"
  data-test-aside
>
  <div class="d-flex pt-2 pb-4">
    <LinkTo
      @route={{@route}}
      class="d-flex align-items-center link-dark text-decoration-none flex-grow-1"
    >
      <img src={{@logo}} alt={{@title}} class="tds-aside-logo me-3" />
      <h4 class="tds-aside-title mb-0">{{@title}}</h4>
    </LinkTo>
    {{yield to="header"}}
  </div>

  <Nav @pills={{true}} class="flex-column flex-grow-1" aria-label="Main nav">
    {{yield}}
  </Nav>

  <Nav @pills={{true}} class="flex-column" aria-label="Footer nav">
    {{yield to="footerNav"}}
  </Nav>

  {{#if (has-block "footer")}}
    <div class="pt-3">
      {{yield to="footer"}}
    </div>
  {{/if}}

  <div class="pt-3">
    <Button
      @text="Toggle menu"
      @icon="angles-{{if this.collapsed 'right' 'left'}}"
      @iconOnly={{true}}
      @color="light"
      class="px-2"
      {{tooltip "Toggle menu" trigger="hover" placement="right"}}
      {{on "click" (fn (mut this.collapsed) (not this.collapsed))}}
    />
  </div>
</aside>