  <:footer>
    <Form::Check
      @value={{this.isDarkTheme}}
      @label="Dark theme"
      @identifier="isDarkTheme"
      @isSwitch={{true}}
      @onChange={{fn (mut this.isDarkTheme)}}
    />
  </:footer>
