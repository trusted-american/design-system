      @text="Introduction"
      @icon="book"
      @route="guides.introduction"
    />

    <Aside::Title @text="Examples" />
    <Aside::Item @text="List" @icon="list" @route="list" />
    <Aside::Item @text="Detail" @icon="box" @route="detail" />
