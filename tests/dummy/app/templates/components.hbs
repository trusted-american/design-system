  @alt="Avatar"
/>

<Subheading @title="Badge" />

<Badge @text="Default badge" />
<Badge @text="Success badge" @color="success" />
<Badge @text="Success badge with icon" @color="success" @icon="check" />

<Subheading @title="BreadcrumbTrail" />

<BreadcrumbTrail />

<Subheading @title="Button" />

<Button @text="Default button" {{on "click" this.do}} />
<Button @text="Success button" @color="success" {{on "click" this.do}} />
<Button
  @text="Success button with icon"
  @color="success"
  @icon="plus"
  {{on "click" this.do}}
/>

<Subheading @title="ExternalLink" />

<ExternalLink @url="https://www.google.com/">
  https://www.google.com/
</ExternalLink>

<Subheading @title="Form::Check" />

<Form::Check @value={{true}} @label="" @identifier="" />

<Subheading @title="Form::DateInput" />

<Form::DateInput
  @value={{this.date}}
  @label="Date"
  @identifier="date"
  @onChange={{fn (mut this.date)}}
/>

<Subheading @title="Form::FileInput" />

<Form::FileInput
  @label="File"
  @identifier="file"
  @onChange={{fn (mut this.file)}}
/>

<Subheading @title="Form::Input" />

<Form::Input
  @value={{this.value}}
  @label="Label"
  @help="Help"
  @invalidFeedback={{this.invalidFeedback}}
  @identifier="identifier"
  @required={{true}}
  placeholder="Placeholder"
/>

<Subheading @title="Form::PhoneInput" />

<Form::PhoneInput
  @value={{this.phone}}
  @label="Phone"
  @identifier="phone"
  @onChange={{fn (mut this.phone)}}
  placeholder="Phone"
/>

<Subheading @title="Form::Radio" />

<Form::Radio
  @options={{array (hash value=true label="Yes") (hash value=false label="No")}}
  @selected={{this.radio}}
  @label="Radio"
  @identifier="radio"
  @onChange={{fn (mut this.radio)}}
/>

<Subheading @title="Form::RadioBtn" />

<Form::RadioBtn
  @options={{array (hash value=true label="Yes") (hash value=false label="No")}}
  @selected={{this.radioBtn}}
  @identifier="radioBtn"
  @onChange={{fn (mut this.radioBtn)}}
/>

<Subheading @title="Form::Select" />

<Form::Select
  @options={{array
    (hash value="active" label="Active")
    (hash value="inactive" label="Inactive")
  }}
  @selected={{this.status}}
  @label="Status"
  @identifier="status"
  @onChange={{fn (mut this.status)}}
/>

<Subheading @title="Form::Textarea" />

<Form::Textarea
  @value={{this.value}}
  @label="Label"
  @help="Help"
  @identifier="identifier"
  @required={{true}}
  placeholder="Placeholder"
/>

<Subheading @title="Heading" />

<Heading @title="Heading">
  Right
</Heading>

<Heading @title="Heading" @type="Type" @code="code">
  Right
</Heading>

<Subheading @title="ListFilter" />

<ListFilter
  @predicates={{array
    (hash
      name="Status"
      key="status"
      value=this.status
      options=(array
        (hash value="active" label="Active")
        (hash value="inactive" label="Inactive")
      )
    )
  }}
  @onChange={{this.do}}
/>

