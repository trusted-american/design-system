</Main::Header>

<Subheading @title="Main::TopHeader" />

<Main::TopHeader>
  TopHeader
</Main::TopHeader>

<Subheading @title="Placeholder" />

{{! <Placeholder @icon='xmark' @title='Title' @subtitle='Subtitle' /> }}

<Subheading @title="PropertyList" />

<PropertyList as |list|>
  <list.item @key="Key 1" @value="Value 1" @alt={{false}}>
    Value 1
  </list.item>
  <list.item @key="Key 2" @value="Value 2" @alt={{false}}>
    Value 2
  </list.item>
  <list.item @key="Key 3" @value="Value 3" @alt={{false}}>
    Value 3
  </list.item>
</PropertyList>

<Subheading @title="Subheading" />

<Subheading @title="Subheading">
  Right
</Subheading>

<Subheading @title="StatCard" />

<div class="row">
  <div class="col">
    <StatCard @key="Key 1" @value="Value 1" />
  </div>
  <div class="col">
    <StatCard @key="Key 2" @value="Value 2" />
  </div>
  <div class="col">
    <StatCard @key="Key 3" @value="Value 3" />
  </div>
</div>

<Subheading @title="Table" />

<Table @data={{this.users}} as |table|>
  <table.header as |header|>
    <header.column @prop="email">
      Email
    </header.column>
    <header.column @prop="firstName">
      First Name
    </header.column>
    <header.column @prop="lastName">
      Last Name
    </header.column>
  </table.header>
  <table.body />
</Table>

<Table @data={{this.users}} @sortable={{true}} as |table|>
  <table.header as |header|>
    <header.column @prop="email" @sort="asc">
      Email
    </header.column>
    <header.column @prop="firstName">
      First Name
    </header.column>
    <header.column @prop="lastName">
      Last Name
    </header.column>
  </table.header>
  <table.body />
</Table>

