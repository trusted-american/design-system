{{page-title "Toast"}}

<Subheading @title="Toast" />

<Toast>
  <:body>Body</:body>
</Toast>

<Toast>
  <:title>Title</:title>
  <:body>Body</:body>
</Toast>

{{! @glint-ignore }}
<Toast @onClose={{this.do}}>
  <:title>Title</:title>
  <:body>Body</:body>
</Toast>

{{! @glint-ignore }}
<Toast @color="primary" @onClose={{this.do}}>
  <:title>Title</:title>
  <:body>Body</:body>
</Toast>

{{! @glint-ignore }}
<Toast @color="success" @onClose={{this.do}}>
  <:title>Title</:title>
  <:body>Body</:body>
</Toast>

{{! @glint-ignore }}
<Toast @color="warning" @onClose={{this.do}}>
  <:title>Title</:title>
  <:body>Body</:body>
</Toast>

{{! @glint-ignore }}
<Toast @color="danger" @onClose={{this.do}}>
  <:title>Title</:title>
  <:body>Body</:body>
</Toast>

{{! @glint-ignore }}
<Toast @onClose={{this.do}}>
  <:title>Title</:title>
  <:body>Body</:body>
  <:buttons>
    {{! @glint-ignore }}
    <Button @text="Button" @size="sm" @color="light" {{on "click" this.do}} />
    {{! @glint-ignore }}
    <Button @text="Link text" @size="sm" @color="link" {{on "click" this.do}} />
  </:buttons>
</Toast>