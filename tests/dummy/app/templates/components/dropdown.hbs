{{page-title "Dropdown"}}

<Subheading @title="Dropdown" />

<Button @text="Open dropdown" {{dropdown}} />
<Dropdown>
  {{! @glint-ignore }}
  <Dropdown::Item @text="Edit" @icon="pen" {{on "click" this.do}} />
  <Dropdown::Divider />
  <Dropdown::Item
    @text="Delete"
    @icon="trash"
    @color="danger"
    {{! @glint-ignore }}
    {{on "click" this.do}}
  />
  <Dropdown::Divider />
  <Dropdown::Item @text="Route" @icon="plus" @route="index" />
  <Dropdown::Item @text="Href" @icon="plus" @href="https://www.google.com/" />
</Dropdown>