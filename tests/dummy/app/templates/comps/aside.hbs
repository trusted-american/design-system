{{page-title "Aside"}}
{{breadcrumb "Aside"}}

<Heading @title="Aside" />

<Snippet @name="aside.hbs">
  {{! BEGIN-SNIPPET aside }}
  <Aside
    @title="Title"
    @logo="/logo.svg"
    @route="index"
    @isCollapsed={{false}}
    @onChange={{(noop)}}
  >
    <:default>
      <Aside::Item @route="index" @label="Home" @icon="house" />
      <Aside::Item
        @route="index"
        @label='With a "count"'
        @icon="users"
        @count={{12}}
      />
      <Aside::Item
        @route="index"
        @label="Disabled"
        @icon="house"
        @isDisabled={{true}}
      />
    </:default>
    <:footerNav>Footer nav</:footerNav>
    <:footer>Footer</:footer>
  </Aside>
  {{! END-SNIPPET }}
</Snippet>

<Subheading @title="Aside group" />

<Snippet @name="aside2.hbs">
  {{! BEGIN-SNIPPET aside2 }}
  <Aside::Group @route="comps.aside" @text="Text" @icon="box">
    <Aside::Item @route="index" @label="Text" @icon="box" />
  </Aside::Group>
  {{! END-SNIPPET }}
</Snippet>

<Subheading @title="Aside item" />

<Snippet @name="aside3.hbs">
  {{! BEGIN-SNIPPET aside3 }}
  <Aside::Item @route="index" @label="Text" @icon="box" />
  {{! END-SNIPPET }}
</Snippet>

<Subheading @title="Aside title" />

<Snippet @name="aside4.hbs">
  {{! BEGIN-SNIPPET aside4 }}
  <Aside::Title @text="Text" />
  {{! END-SNIPPET }}
</Snippet>