{{page-title "Button"}}
{{breadcrumb "Button"}}

<Heading @title="Button" />

<Snippet @name="button.hbs">
  {{! BEGIN-SNIPPET button }}
  <Button @text="Default button" {{on "click" this.do}} />
  <Button @text="Success button" @color="success" {{on "click" this.do}} />
  <Button
    @text="Success button with icon"
    @color="success"
    @icon="plus"
    {{on "click" this.do}}
  />
  <Button
    @text="Success button with trailing icon"
    @color="success"
    @icon="plus"
    @isIconTrailing={{true}}
    {{on "click" this.do}}
  />
  <Button
    @text="Success button with only icon"
    @icon="plus"
    @isIconOnly={{true}}
    @color="success"
    {{on "click" this.do}}
  />
  <Button @text="Loading button" @isLoading={{true}} {{on "click" this.do}} />
  <Button @text="Disabled button" disabled {{on "click" this.do}} />
  <Button @text="Count button" @count={{3}} {{on "click" this.do}} />
  {{! END-SNIPPET }}
</Snippet>

<Subheading @title="Route" />

<Snippet @name="button2.hbs">
  {{! BEGIN-SNIPPET button2 }}
  <Button @text="Route button" @route="index" />
  <Button @text="Route button with query" @route="index" @query={{(hash)}} />
  {{! END-SNIPPET }}
</Snippet>

<Subheading @title="Link" />

<Snippet @name="button3.hbs">
  {{! BEGIN-SNIPPET button3 }}
  <Button
    @text="Link button"
    @icon="up-right-from-square"
    @href="https://www.google.com/"
  />

  <Button
    @text="Link button with trailing icon"
    @icon="arrow-right"
    @isIconTrailing={{true}}
    @href="https://www.google.com/"
  />
  {{! END-SNIPPET }}
</Snippet>