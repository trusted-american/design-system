{{page-title "Calendar"}}
{{breadcrumb "Calendar"}}

<Heading @title="Calendar" />

<Snippet @name="calendar.hbs">
  {{! BEGIN-SNIPPET calendar }}
  <Calendar @events={{this.model}} @onSelect={{fn (mut this.event)}} />
  {{! END-SNIPPET }}
</Snippet>

{{#if this.event}}
  <Modal @title="Event" @closeText="Close" @onClose={{this.close}}>
    {{this.event.title}}
  </Modal>
{{/if}}