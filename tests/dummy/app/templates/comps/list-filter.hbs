{{page-title "ListFilter"}}
{{breadcrumb "ListFilter"}}

<Subheading @title="ListFilter" />

<p>Status: {{this.status}}</p>

<ListFilter
  @predicates={{array
    (hash
      label="Status"
      key="status"
      value=this.status
      options=(array
        (hash value="active" label="Active")
        (hash value="inactive" label="Inactive")
      )
    )
  }}
  {{! @glint-expect-error }}
  @onChange={{this.change}}
/>