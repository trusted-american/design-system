{{page-title "Form"}}
{{breadcrumb "Form"}}

<Heading @title="Form" />

<Subheading @title="Form::Check" />

<Form::Check
  @value={{this.check}}
  @label="Label"
  @identifier="check"
  @required={{true}}
  @help="Help"
  @invalidFeedback="Invalid feedback"
/>

<Subheading @title="Form::DateInput" />

<Form::DateInput
  @value={{this.date}}
  @label="Label"
  @identifier="dateInput"
  @required={{true}}
  @help="Help"
  @invalidFeedback="Invalid feedback"
  @onChange={{fn (mut this.date)}}
/>

<Subheading @title="Form::FileDropzone" />

<Form::FileDropzone @onCreate={{(noop)}} />

<Subheading @title="Form::FileInput" />

<Form::FileInput
  @label="Label"
  @identifier="file"
  @required={{true}}
  @help="Help"
  @invalidFeedback="Invalid feedback"
  @onChange={{fn (mut this.file)}}
/>

<Subheading @title="Form::HtmlInput" />

<Form::HtmlInput
  @value={{this.htmlValue}}
  @label="Label"
  @identifier="htmlInput"
  @required={{true}}
  @help="Help"
  @invalidFeedback="Invalid feedback"
  @editorText="Editor"
  @codeText="Code"
  @onChange={{fn (mut this.htmlValue)}}
/>

<Subheading @title="Form::Input" />

<Form::Input
  @value={{this.value}}
  @label="Label"
  @identifier="input"
  @required={{true}}
  @help="Help"
  @invalidFeedback="Invalid feedback"
  placeholder="Placeholder"
/>

<Subheading @title="Form::NumberInput" />

<Form::NumberInput
  @value={{this.number}}
  @label="Label"
  @identifier="numberInput"
  @required={{true}}
  @help="Help"
  @invalidFeedback="Invalid feedback"
  @onChange={{fn (mut this.number)}}
  placeholder="Placeholder"
/>

<Subheading @title="Form::PhoneInput" />

<Form::PhoneInput
  @value={{this.phone}}
  @label="Label"
  @identifier="phoneInput"
  @required={{true}}
  @help="Help"
  @onChange={{fn (mut this.phone)}}
  placeholder="Placeholder"
/>

<Subheading @title="Form::Radio" />

<Form::Radio
  @options={{array
    (hash
      value=true
      label="Yes"
      help="With supporting text below as a natural lead-in to additional content."
    )
    (hash
      value=false
      label="No"
      help="With supporting text below as a natural lead-in to additional content."
    )
  }}
  @selected={{this.radio}}
  @label="Label"
  @identifier="radio"
  @required={{true}}
  @help="Help"
  @onChange={{fn (mut this.radio)}}
/>

<Subheading @title="Form::RadioButton" />

<Form::RadioButton
  @options={{array (hash value=true label="Yes") (hash value=false label="No")}}
  @selected={{this.radio}}
  @identifier="radioButton"
  @onChange={{fn (mut this.radio)}}
/>

<Subheading @title="Form::RadioCard" />

<Form::RadioCard
  @options={{array
    (hash
      value=true
      label="Yes"
      icon="check"
      help="With supporting text below as a natural lead-in to additional content."
    )
    (hash
      value=false
      label="No"
      icon="xmark"
      help="With supporting text below as a natural lead-in to additional content."
    )
  }}
  @selected={{this.radio}}
  @label="Label"
  @identifier="radioCard"
  @required={{true}}
  @help="Help"
  @onChange={{fn (mut this.radio)}}
/>

<Subheading @title="Form::Select" />

<Form::Select
  @options={{array
    (hash value=undefined label="Chooseâ€¦")
    (hash value="active" label="Active")
    (hash value="inactive" label="Inactive")
  }}
  @selected={{this.status}}
  @label="Label"
  @identifier="select"
  @required={{true}}
  @help="Help"
  @onChange={{fn (mut this.status)}}
/>

<Form::Select
  @options={{array "active" "inactive"}}
  @selected={{this.status}}
  @label="Label"
  @identifier="selectSimple"
  @required={{true}}
  @simple={{true}}
  @onChange={{fn (mut this.status)}}
/>

<Subheading @title="Form::Textarea" />

<Form::Textarea
  @value={{this.value}}
  @label="Label"
  @identifier="textarea"
  @required={{true}}
  @help="Help"
  placeholder="Placeholder"
/>

<Subheading @title="Form::TimeInput" />

<Form::TimeInput
  @value={{this.date}}
  @label="Label"
  @identifier="timeInput"
  @required={{true}}
  @help="Help"
  @onChange={{fn (mut this.date)}}
/>