{{page-title "Alert"}}
{{breadcrumb "Alert"}}

<Heading @title="Alert" />

{{! BEGIN-SNIPPET example1 }}
<Alert @color="danger" @icon="triangle-exclamation">
  One of your domains is unverified. Please verify your domain to prevent others
  from claiming it.
  <a href="#" class="alert-link">Learn more</a>
</Alert>
{{! END-SNIPPET }}

{{#let (get-code-snippet "example1.hbs") as |snippet|}}
  <CodeBlock
    @language={{snippet.language}}
    @code={{snippet.source}}
    class="mb-4"
  />
{{/let}}

