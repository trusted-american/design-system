{{page-title "Dropdown"}}
{{breadcrumb "Dropdown"}}

<Heading @title="Dropdown" />

<Button @text="Open dropdown" {{dropdown}} />
<Dropdown>
  <Dropdown::Item
    @text="Copy link"
    @subtitle="Due by December 31, 2021"
    @icon="copy"
    @shortcut="⌘C"
    {{on "click" this.do}}
  />
  <Dropdown::Item
    @text="Quote reply"
    @icon="quote-left"
    @shortcut="⌘Q"
    {{on "click" this.do}}
  />
  <Dropdown::Item
    @text="Edit comment"
    @icon="pen"
    @shortcut="⌘E"
    {{on "click" this.do}}
  />
  <Dropdown::Divider />
  <Dropdown::Item
    @text="Delete file"
    @icon="trash"
    @shortcut="⌘D"
    @color="danger"
    {{on "click" this.do}}
  />
  <Dropdown::Divider />
  <Dropdown::Item @text="Route" @icon="plus" @route="index" />
  <Dropdown::Header @text="Header" />
  <Dropdown::Item @text="Href" @icon="plus" @href="https://www.google.com/" />
</Dropdown>