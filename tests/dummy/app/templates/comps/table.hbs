{{page-title "Table"}}
{{breadcrumb "Table"}}

<Heading @title="Table" />

<Subheading @title="Default" />

<Table
  @data={{this.model}}
  @nextText="Next"
  @previousText="Previous"
  as |table|
>
  <table.header as |header|>
    <header.column @prop="email">
      Email
    </header.column>
    <header.column @prop="firstName">
      First Name
    </header.column>
    <header.column @prop="lastName">
      Last Name
    </header.column>
  </table.header>
  <table.body as |body user|>
    <body.row as |row|>
      <row.cell>
        {{user.email}}
      </row.cell>
      <row.cell>
        {{user.firstName}}
      </row.cell>
      <row.cell>
        {{user.lastName}}
      </row.cell>
    </body.row>
  </table.body>
</Table>

<Subheading @title="Sortable" />

<Table
  @data={{this.model}}
  @isSortable={{true}}
  @nextText="Next"
  @previousText="Previous"
  as |table|
>
  <table.header as |header|>
    <header.column @prop="email" @sort="asc">
      Email
    </header.column>
    <header.column @prop="firstName">
      First Name
    </header.column>
    <header.column @prop="lastName">
      Last Name
    </header.column>
  </table.header>
  <table.body />
</Table>

