{{page-title "Table"}}
{{breadcrumb "Table" route="comps.table"}}

<Heading @title="Table" />

<Subheading @title="Default" />

<Snippet @name="table.hbs">
  {{! BEGIN-SNIPPET table }}
  <Table
    @data={{this.model}}
    @nextButtonLabel="Next"
    @previousButtonLabel="Previous"
    @viewingLabel="Viewing"
    @ofLabel="of"
    @resultsLabel="results"
    as |table|
  >
    <table.header as |header|>
      <header.column @prop="email">
        Email
      </header.column>
      <header.column @prop="firstName">
        First Name
      </header.column>
      <header.column @prop="lastName">
        Last Name
      </header.column>
    </table.header>
    <table.body as |body user|>
      <body.row as |row|>
        <row.cell>
          {{user.email}}
        </row.cell>
        <row.cell>
          {{user.firstName}}
        </row.cell>
        <row.cell>
          {{user.lastName}}
        </row.cell>
      </body.row>
    </table.body>
  </Table>
  {{! END-SNIPPET }}
</Snippet>

