{{breadcrumb "Flyout" route="comps.flyout"}}

<Heading @title="Flyout" />

<Snippet @name="flyout.hbs">
  {{! BEGIN-SNIPPET flyout }}
  <Button @label="Open flyout" {{on "click" (fn (mut this.showFlyout) true)}} />

