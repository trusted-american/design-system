{{page-title "Property list"}}
{{breadcrumb "Property list"}}

<Heading @title="Property list" />

<Subheading @title="Default" />

<Snippet @name="property-list.hbs">
  {{! BEGIN-SNIPPET property-list }}
  <PropertyList as |list|>
    <list.item
      @label="Key 1"
      @value="Value 1"
      @alt={{false}}
      @tooltip="This is a tooltip."
    >
      Value 1
    </list.item>
    <list.item @label="Key 2" @value="Value 2" @alt={{false}}>
      Value 2
    </list.item>
    <list.item @label="Key 3" @value="Value 3" @alt={{false}}>
      <:default>
        Value 3
      </:default>
      <:side>
        Side
      </:side>
    </list.item>
  </PropertyList>
  {{! END-SNIPPET }}
</Snippet>

<Subheading @title="Horizontal" />

<Snippet @name="property-list2.hbs">
  {{! BEGIN-SNIPPET property-list2 }}
  <PropertyList @isHorizontal={{true}} as |list|>
    <list.item
      @label="Key 1"
      @value="Value 1"
      @alt={{false}}
      @tooltip="This is a tooltip."
    >
      Value 1
    </list.item>
    <list.item @label="Key 2" @value="Value 2" @alt={{false}}>
      Value 2
    </list.item>
    <list.item @label="Key 3" @value="Value 3" @alt={{false}}>
      Value 3
    </list.item>
  </PropertyList>
  {{! END-SNIPPET }}
</Snippet>