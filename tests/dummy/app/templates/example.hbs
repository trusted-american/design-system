{{page-title "Example"}}
{{breadcrumb "Example"}}

<Heading @title="Example">
  <Bs::Toolbar class="gap-2" as |toolbar|>
    <toolbar.group>
      <Input
        @value={{this.search}}
        @type="search"
        class="form-control"
        placeholder="Search"
        aria-label="Search"
      />
    </toolbar.group>
    <toolbar.group as |group|>
      <group.button @onClick={{this.do}}>
        Search
      </group.button>
    </toolbar.group>
    <toolbar.group as |group|>
      <group.button @color="primary" @onClick={{this.do}}>
        Create
      </group.button>
      <group.button @color="primary" {{dropdown}} />
      <Bs::Dropdown @align="right" as |dropdown|>
        <dropdown.item @onClick={{this.do}}>
          Import
        </dropdown.item>
      </Bs::Dropdown>
    </toolbar.group>
  </Bs::Toolbar>
</Heading>

<Table @data={{this.users}} as |table|>
  <table.header as |header|>
    <header.column @prop="email">
      Email
    </header.column>
    <header.column @prop="firstName">
      First Name
    </header.column>
    <header.column @prop="lastName">
      Last Name
    </header.column>
  </table.header>
  <table.body />
</Table>