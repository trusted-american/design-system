{{page-title "Example"}}
{{breadcrumb "Example"}}

<Heading @title="Example">
  <ButtonSet>
    <Input
      @value={{this.search}}
      @type="search"
      class="form-control"
      placeholder="Search"
      aria-label="Search"
    />
    <Button @text="Filter" {{on "click" this.do}} />
    <Button @text="Sort" {{on "click" this.do}} />
    <Button @text="Export" {{on "click" this.do}} />
    <Button @text="Create" @color="primary" {{on "click" this.do}} />
  </ButtonSet>
</Heading>

<Table @data={{this.users}} as |table|>
  <table.header as |header|>
    <header.column @prop="email">
      Email
    </header.column>
    <header.column @prop="firstName">
      First Name
    </header.column>
    <header.column @prop="lastName">
      Last Name
    </header.column>
  </table.header>
  <table.body />
</Table>